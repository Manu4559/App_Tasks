{{#if tasks}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N.</th>
            <th>Modulo</th>
            <th>Metodo</th>
            <th>Descripci√≥n</th>
            <th>Done</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
        <tr>
            <td> <a href="/tasks/{{_id}}/edit" class="btn btn-primary btn-sm">{{@index}}</a></td>
            <td>{{modulo}}</td>
            <td>{{metodo}}</td>
            <td>{{descripcion}}</td>
            <td>
                {{#if done}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-secondary btn-sm">Obsoleto</a>
                {{else}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success btn-sm">Actual</a>
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
        <h1>No tasks</h1>
        <img src="/icons/empty.svg" class="w-75" alt="">
    </div>
</div>
{{/if}}